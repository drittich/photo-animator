<Window x:Class="PhotoAnimator.App.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:PhotoAnimator.App.Controls"
        mc:Ignorable="d"
        Title="Photo Animator"
        MinWidth="900"
        MinHeight="600"
        SizeToContent="WidthAndHeight"
        Focusable="True"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Margin" Value="4,0,4,0" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="StatusText" TargetType="TextBlock">
            <Setter Property="Margin" Value="8,2,16,2" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- Toolbar -->
            <RowDefinition Height="*" />     <!-- Image surface -->
            <RowDefinition Height="Auto" />  <!-- Slider -->
            <RowDefinition Height="Auto" />  <!-- Status bar -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Padding="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource ToolbarButton}" Content="Open Folder" Click="OnOpenFolderClick" />
                <Button Grid.Column="1" Style="{StaticResource ToolbarButton}" Content="Play" Click="OnPlayClick" />
                <Button Grid.Column="2" Style="{StaticResource ToolbarButton}" Content="Stop" Click="OnStopClick" />
                <Button Grid.Column="3" Style="{StaticResource ToolbarButton}" Content="Rewind" Click="OnRewindClick" />
                <Button Grid.Column="4" Style="{StaticResource ToolbarButton}" Content="Reload" Click="OnReloadClick" />

                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <TextBlock Text="FPS:" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <ComboBox Width="80"
                              ItemsSource="{Binding FpsOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                              SelectedValue="{Binding SelectedFps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                    <TextBlock Text="Parallel Decodes:" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBlock Text="{Binding MaxParallelDecodes}" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Background="Black">
            <controls:DoubleBufferedImageControl x:Name="PART_ImageSurface" />
        </Grid>

        <Slider Grid.Row="2"
                x:Name="PART_ScrubSlider"
                Margin="8,4"
                Minimum="0"
                IsMoveToPointEnabled="True"
                LargeChange="10"
                SmallChange="1"
                Value="{Binding CurrentFrameIndex, Mode=OneWay, PresentationTraceSources.TraceLevel=High}"
                PreviewMouseDown="ScrubSlider_PreviewMouseDown"
                PreviewMouseUp="ScrubSlider_PreviewMouseUp"
                ValueChanged="ScrubSlider_ValueChanged" />

        <Border Grid.Row="3" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Padding="4" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Style="{StaticResource StatusText}" Text="Frames:" />
                <TextBlock Grid.Column="1" Style="{StaticResource StatusText}" Text="{Binding PreloadCount, Mode=OneWay}" />

                <TextBlock Grid.Column="2" Style="{StaticResource StatusText}" Text="Current:" />
                <TextBlock Grid.Column="3" Style="{StaticResource StatusText}" Text="{Binding CurrentFrameIndex}" />

                <TextBlock Grid.Column="4" Style="{StaticResource StatusText}">
                    <TextBlock.Text>
                        <Binding Path="FolderPath" />
                    </TextBlock.Text>
                </TextBlock>

                <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Margin="8,2,8,2" Text="Preload:" Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}" />
                    <TextBlock Margin="0,2,8,2" Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}">
                        <Run Text="{Binding PreloadCount, Mode=OneWay}" />
                        <Run Text="/" />
                        <Run Text="{Binding PreloadTotal, Mode=OneWay}" />
                    </TextBlock>
                    <ProgressBar Margin="0,4,12,4"
                                 Height="16"
                                 Width="150"
                                 Minimum="0"
                                 Maximum="{Binding PreloadTotal, Mode=OneWay, PresentationTraceSources.TraceLevel=High}"
                                 Value="{Binding PreloadCount, Mode=OneWay, PresentationTraceSources.TraceLevel=High}"
                                 Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}" />
                    <TextBlock Margin="0,2,16,2"
                               Text="{Binding PreloadPercent, StringFormat={}{0:P0}}"
                               Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}" />
                    <TextBlock Margin="8,2,16,2" Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}" Text="Preloading..." />
                    <TextBlock Margin="8,2,8,2">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Stopped" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                        <Setter Property="Text" Value="Playing" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
