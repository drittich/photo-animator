<Window x:Class="PhotoAnimator.App.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:PhotoAnimator.App.Controls"
        mc:Ignorable="d"
        Title="Photo Animator v1.0.1"
        MinWidth="900"
        MinHeight="600"
        SizeToContent="WidthAndHeight"
        Focusable="True"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Margin" Value="4,0,4,0" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="StatusText" TargetType="TextBlock">
            <Setter Property="Margin" Value="8,2,16,2" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="TrayExpanderStyle" TargetType="Expander">
            <Setter Property="ExpandDirection" Value="Right" />
            <Setter Property="Width" Value="240" />
            <Style.Triggers>
                <Trigger Property="IsExpanded" Value="False">
                    <Setter Property="Width" Value="36" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- Toolbar -->
            <RowDefinition Height="*" />     <!-- Image surface -->
            <RowDefinition Height="Auto" />  <!-- Slider -->
            <RowDefinition Height="Auto" />  <!-- Status bar -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="0"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="0,0,1,0"
                Padding="4"
                IsEnabled="{Binding IsInteractionEnabled}">
            <Expander IsExpanded="{Binding IsTrayOpen, Mode=TwoWay}"
                      Style="{StaticResource TrayExpanderStyle}">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Recent folders" FontWeight="Bold" />
                        <TextBlock Text="{Binding RecentFolders.Count, StringFormat={}({0})}"
                                   Margin="6,0,0,0"
                                   Opacity="0.7" />
                    </StackPanel>
                </Expander.Header>
                <ItemsControl ItemsSource="{Binding RecentFolders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Tag="{Binding FullPath}"
                                    Click="OnRecentFolderClick"
                                    Margin="0,3,0,3"
                                    Padding="6,6"
                                    HorizontalContentAlignment="Left"
                                    ToolTip="{Binding FullPath}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding FolderName}"
                                               TextTrimming="CharacterEllipsis"
                                               Width="150" />
                                    <TextBlock Text="{Binding ImageCount, StringFormat={}({0})}"
                                               Margin="8,0,0,0"
                                               Opacity="0.7" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Expander>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Padding="4" IsEnabled="{Binding IsInteractionEnabled}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource ToolbarButton}" Content="Open Folder" Click="OnOpenFolderClick" />
                <Button Grid.Column="1" Style="{StaticResource ToolbarButton}" Content="Play" Click="OnPlayClick" />
                <Button Grid.Column="2" Style="{StaticResource ToolbarButton}" Content="Stop" Click="OnStopClick" />
                <Button Grid.Column="3" Style="{StaticResource ToolbarButton}" Content="Rewind" Click="OnRewindClick" />
                <Button Grid.Column="4" Style="{StaticResource ToolbarButton}" Content="Reload" Click="OnReloadClick" />
                
                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <TextBlock Text="FPS:" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <ComboBox Width="40"
                              ItemsSource="{Binding FpsOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                              SelectedValue="{Binding SelectedFps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              VerticalAlignment="Center" />
                </StackPanel>

                <CheckBox Grid.Column="6"
                          Content="Loop playback"
                          IsChecked="{Binding LoopPlayback, Mode=TwoWay}"
                          VerticalAlignment="Center"
                          Margin="20,0,0,0" />

                <StackPanel Grid.Column="7" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <TextBlock Text="Elapsed:" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBlock Text="{Binding ElapsedTimeDisplay}" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>

                <Button Grid.Column="9"
                        Style="{StaticResource ToolbarButton}"
                        Content="Help"
                        Click="OnHelpClick"
                        HorizontalAlignment="Right"
                        Margin="12,0,0,0" />
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.Column="1" Background="Black">
            <controls:DoubleBufferedImageControl x:Name="PART_ImageSurface" />
        </Grid>

        <Slider Grid.Row="2"
                Grid.Column="1"
                x:Name="PART_ScrubSlider"
                Margin="8,4"
                Minimum="0"
                IsMoveToPointEnabled="True"
                LargeChange="10"
                SmallChange="1"
                Value="{Binding CurrentFrameIndex, Mode=OneWay}"
                PreviewMouseDown="ScrubSlider_PreviewMouseDown"
                PreviewMouseUp="ScrubSlider_PreviewMouseUp"
                ValueChanged="ScrubSlider_ValueChanged"
                IsEnabled="{Binding IsInteractionEnabled}" />

        <Border Grid.Row="3" Grid.Column="1" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Padding="4" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Style="{StaticResource StatusText}" Text="Frames:" />
                <TextBlock Grid.Column="1" Style="{StaticResource StatusText}" Text="{Binding FrameCount, Mode=OneWay}" />

                <TextBlock Grid.Column="2" Style="{StaticResource StatusText}" Text="Current:" />
                <TextBlock Grid.Column="3" Style="{StaticResource StatusText}" Text="{Binding CurrentFrameIndex}" />

                <TextBlock Grid.Column="4" Style="{StaticResource StatusText}" Text="Dropped:" />
                <TextBlock Grid.Column="5" Style="{StaticResource StatusText}" Text="{Binding DroppedFrames}" />

                <TextBlock Grid.Column="6" Style="{StaticResource StatusText}">
                    <TextBlock.Text>
                        <Binding Path="FolderPath" />
                    </TextBlock.Text>
                </TextBlock>

                <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Margin="8,2,8,2" Text="Preload:" Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}" />
                    <TextBlock Margin="0,2,8,2" Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}">
                        <Run Text="{Binding PreloadCount, Mode=OneWay}" />
                        <Run Text="/" />
                        <Run Text="{Binding PreloadTotal, Mode=OneWay}" />
                    </TextBlock>
                    <ProgressBar Margin="0,4,12,4"
                                 Height="16"
                                 Width="150"
                                 Minimum="0"
                                 Maximum="{Binding PreloadTotal, Mode=OneWay}"
                                 Value="{Binding PreloadCount, Mode=OneWay}"
                                 Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}" />
                    <TextBlock Margin="0,2,16,2"
                               Text="{Binding PreloadPercent, StringFormat={}{0:P0}}"
                               Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}" />
                    <TextBlock Margin="8,2,16,2" Visibility="{Binding IsPreloading, Converter={StaticResource BoolToVis}}" Text="Preloading..." />
                    <TextBlock Margin="8,2,8,2">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Stopped" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                        <Setter Property="Text" Value="Playing" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.RowSpan="4"
                Background="#AA000000"
                Visibility="{Binding IsHelpVisible, Converter={StaticResource BoolToVis}}"
                Panel.ZIndex="10">
            <Grid>
                <Border Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                        Padding="16"
                        MaxWidth="520"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Keyboard Shortcuts" FontSize="18" FontWeight="Bold" Margin="0,0,0,8" />
                        <Grid Margin="0,4,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="Space" Margin="0,0,8,0" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Play / Pause" />

                            <TextBlock Grid.Row="1" Grid.Column="0" FontWeight="Bold" Text="Left Arrow" Margin="0,2,8,0" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Previous frame" Margin="0,2,0,0" />

                            <TextBlock Grid.Row="2" Grid.Column="0" FontWeight="Bold" Text="Right Arrow" Margin="0,2,8,0" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Next frame" Margin="0,2,0,0" />

                            <TextBlock Grid.Row="3" Grid.Column="0" FontWeight="Bold" Text="Home" Margin="0,2,8,0" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Rewind to start" Margin="0,2,0,0" />

                            <TextBlock Grid.Row="4" Grid.Column="0" FontWeight="Bold" Text="R" Margin="0,2,8,0" />
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="Reload current folder" Margin="0,2,0,0" />

                            <TextBlock Grid.Row="5" Grid.Column="0" FontWeight="Bold" Text="F1" Margin="0,2,8,0" />
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="Show this help" Margin="0,2,0,0" />

                            <TextBlock Grid.Row="6" Grid.Column="0" FontWeight="Bold" Text="Esc" Margin="0,2,8,0" />
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="Close help overlay" Margin="0,2,0,0" />
                        </Grid>

                        <Button Content="Close"
                                HorizontalAlignment="Right"
                                Padding="10,6"
                                Click="OnCloseHelpClick" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
